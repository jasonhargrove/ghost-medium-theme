

{{!< default }}

<div class = "screen-content" >

  <aside class = "cover" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>

  Cover

{{!-- 
    {{#if @blog.logo}}
    <a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>
    {{/if}}

    <h1 class="blog-title">{{@blog.title}}</h1>
    <h2 class="blog-description">{{@blog.description}}</h2> --}}

  </aside>

  <section class = "content" >

    <div class = "inner-wrapper" >


      {{#foreach posts}}

      <article class="{{post_class}}">

        <header class="post-header">

          <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{#if tags}}on {{tags}}{{/if}}</span>
          <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>

        </header>

        <section class="post-excerpt-container">
          <p>{{excerpt characters=100}}&hellip;</p>
          <div class="hidden">{{content}}</div>
          <div class="action"><a href="{{url}}">Read More</a></div>
          <div style="margin-bottom: 20px"></div>
        </section>

      </article>

      {{/foreach}}

      {{pagination}}


    </div>

  </section>

</div>